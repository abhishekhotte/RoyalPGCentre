<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Royal Postgraduate Centre</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicons -->
    <link href="~/favicon.png" rel="icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Montserrat:300,400,500,700" rel="stylesheet">
    <link href="~/lib/snackbar/snackbar.css" rel="stylesheet" />

    <!-- Bootstrap CSS File -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/theme-default.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/bootstrap.min.css" rel="stylesheet" />

    <!-- Libraries CSS Files -->
    <link href="~/lib/jquery/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/ionicons/css/ionicons.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/lib/bootstrap-datepicker/bootstrap-datepicker3.min.css" rel="stylesheet" /> 

    <!-- Main Stylesheet File -->
    <link href="~/Content/style.css" rel="stylesheet">

    <!-- JavaScript Libraries -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/lib/bootstrap/bootstrap.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/superfish/hoverIntent.js"></script>
    <script src="~/lib/superfish/superfish.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/lib/isotope/isotope.pkgd.min.js"></script>
    <script src="~/lib/lightbox//js/lightbox.min.js"></script>
    <script src="~/lib/touchSwipe/jquery.touchSwipe.min.js"></script>
    <script src="~/lib/snackbar/snackbar.js"></script>
    <script src="~/Scripts/jquery.spinner.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>

    <!-- Contact Form JavaScript File -->
    <!-- Template Main Javascript File -->
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/custom.js"></script>


</head>

<body>

    <!--==========================
      Header
    ============================-->
    <header id="header">
        @if (User.Identity.IsAuthenticated)
        {
            <style>
                .container-fluid {
                    margin-top: 15px;
                }

                .nav-menu-container {
                    margin-top: 10px;
                }
                #header{
                    height:100px;
                }
                #header.header-scrolled{
                    height:93px;
                }

                #header.header-scrolled .container-fluid.nav-menu-container,#header.header-scrolled #logo{
                    height:90px;
                    margin-top: 10px;
                }
                #header.header-scrolled #logo{
                    margin-top: 5px;
                }
                #nav-menu-container{
                    margin-top:6px;
                }
                .header-scrolled #nav-menu-container{
                    margin-top:11px;
                }

                .spinner-loaing{
                    top:35px;
                }
                .header-scrolled #divSpinnerLoader{
                        top: 32px;
                }
                .header-scrolled #divHeaderLoader{

                }
            </style>
            <div class="authenticate-header">
                Welcome&nbsp;<i> @User.Identity.Name</i>
                &nbsp;&nbsp;&nbsp;&nbsp; <a id="lnkLogout" href="@Url.Action("logout", "account")" style="color:#19b6dd !important;">Logout</a>
            </div>
        }
        <div class="container-fluid">
            <div id="divSpinnerLoader" class="spinner-loaing" style="display:none">
                <div id="js-spinner"></div>
            </div>
            <div id="logo" class="pull-left">
                <h1><a href="#intro" class="scrollto">Royal Postgraduate Centre</a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <a href="#intro"><img src="img/logo.png" alt="" title="" /></a>-->
            </div>

            <nav id="nav-menu-container">
                <ul class="nav-menu" id="ulMenu">
                    <li id="liHome"><a href="/home">Home</a></li>
                    <li id="liAboutUs"><a href="/about-us">About Us</a></li>
                    <li id="liDepartments"><a href="/departments">Departments</a></li>
                    <li id="liStaff"><a href="/about-us/our-staff">Our Staff</a></li>
                    <li id="liEvents"><a href="/about-us/events">Events</a></li>
                    <li id="liFacilities" class="menu-has-children">
                        <a href="/facilities">Facilities</a>
                        <ul>
                            <li id="liFacilitiesLab"><a href="/facilities/computer-lab">Computer Lab</a></li>
                            <li id="liFacilitiesLibrary"><a href="/facilities/library">Library</a></li>
                            <li id="liFacilitiesBus"><a href="/facilities/bus">Bus Facility</a></li>
                        </ul>
                    </li>
                    <li id="liContctUs"><a href="/home/contact">Contact Us</a></li>
                </ul>
            </nav><!-- #nav-menu-container -->
        </div>
        @*<div class="progress header-loading" id="divHeaderLoader" style="display:none">
                <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"></div>
            </div>*@
    </header><!-- #header -->
    <div style="margin-top:90px;min-height: 425px;">
        @RenderBody()
    </div>

    <!--==========================
      Footer
    ============================-->
    <footer id="footer">
        <div class="container">
            <div class="copyright">
                &copy; @DateTime.Now.Year - Royal PG Centre. All Rights Reserved.
                <br />
                Designed & Developed by Abhishek Hotte
            </div>
        </div>
    </footer><!-- #footer -->

    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>


    @*<script src="~/lib/mdb/mdb.js"></script>*@


</body>
</html>
