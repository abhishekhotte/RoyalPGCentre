<script>
    $(document).ready(function () {
        $("#ulMenu li").removeClass("menu-active");
        $("#liHome").addClass("menu-active");
        getLatestNews();
    });

    function getLatestNews() {
        showLoader();
        $.ajax({
            type: "POST",
            url: '/AboutUs/GetNewsList',
            dataType: 'json',
            contentType: false,
            processData: false,
            success: function (data) {
                if (data.result == "success") {
                    var temp = "", carouselContent = "", count = 0;
                   


                    for (var i = 0; i < data.list.length; i++) {
                        temp += "<li id='liDepartment" + data.list[i].Id + "' ><a href='/about-us/news/" + data.list[i].Id + "'><span class='fa fa-angle-right' style='padding-right:5px;'></span>" + data.list[i].Name + "</a></li>";
                        
                    }
                    $("#divModalBody").html(temp);
                    $("#divModal").modal({ backdrop: false });
                    
                    $(".modal").css('background-color', 'transparent');
                    if (data.list.length > 0) {
                        $("#dvCarousel").show();
                       
                    }
                    else
                        $("#dvCarousel").hide();
                }
                else
                    showAlertDialog("warning", "Unable to fetch news details");

                hideLoader();
            },
            error: function (error) {
                showAlertDialog("warning", "Unable to fetch news details");
                hideLoader();
            }
        });

    }
</script>
